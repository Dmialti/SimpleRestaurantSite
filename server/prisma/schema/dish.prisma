model Category {
    id     Int    @id @default(autoincrement())
    name   String @unique
    dishes Dish[]

    createdAt DateTime @default(now())
}

model Dish {
    id          Int    @id @default(autoincrement())
    name        String
    description String
    price       Float
    imageSrc    String

    category   Category @relation(fields: [categoryId], references: [id])
    categoryId Int

    createdAt DateTime @default(now())
}
