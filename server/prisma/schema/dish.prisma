model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  dishes    Dish[]
}

model Dish {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  imageSrc    String
  available   Boolean  @default(true)
  categoryId  Int
  createdAt   DateTime @default(now())
  category    Category @relation(fields: [categoryId], references: [id])
}
