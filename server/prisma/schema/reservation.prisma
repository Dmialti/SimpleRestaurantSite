enum ReservationStatus {
  PENDING
  CONFIRMED
  REJECTED
  CANCELLED
  COMPLETED
}

model Reservation {
  id        Int               @id @default(autoincrement())
  name      String
  email     String
  phone     String
  guests    Int
  dateTime  DateTime
  status    ReservationStatus @default(PENDING)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
}
